{
  "name": "clinician-management-api-tests",
  "version": "1.0.0",
  "description": "Playwright API test framework for Clinician Management CRUD operations",
  "main": "index.js",
  "scripts": {
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:ui": "playwright test --ui",
    "test:report": "playwright show-report",
    "test:specific": "playwright test -g",
    "test:parallel": "playwright test --workers=4",
    "test:sequential": "playwright test --workers=1",
    "test:complete-workflow": "playwright test -g 'Complete Clinician Management Workflow'",
    "test:auth": "playwright test -g 'Login and Get Authentication'",
    "test:provider": "playwright test -g 'Create Provider'",
    "test:patient": "playwright test -g 'Create Patient'",
    "test:appointment": "playwright test -g 'Book Appointment'",
    "test:encounter": "playwright test -g 'Encounter'",
    "test:extended": "playwright test -g 'Extended Workflow'",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write '**/*.{ts,js,json}'",
    "prepare": "husky install",
    "pretest": "npm run lint",
    "posttest": "npm run test:report"
  },
  "keywords": [
    "playwright",
    "api-testing",
    "healthcare",
    "automation",
    "crud-operations"
  ],
  "author": "Your Name",
  "license": "ISC",
  "devDependencies": {
    "@playwright/test": "^1.40.1",
    "@types/node": "^20.19.9",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "dotenv": "^16.3.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-playwright": "^0.20.0",
    "husky": "^8.0.3",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "moment": "^2.30.1",
    "winston": "^3.11.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
